
 <div class=container>

  <% if @message %>
    <h2 style=color:blue><%= @message %></h2>
    </br>
  <% end %>

  <% if @user %>

    Logged in as: <a href="/profile"><%= @user.email %></a>

    <h2>Welcome to Tic-Tac-Toe!</h2>
    </br>
    <h3><a href="/newgame">Create new game</a></h3>
    </br>
    <h4>Join a game:</h4>
    <% open_games = Game.where(in_progress: false, ended: false) %>
    <% open_games.each do |g| %>
      <a href="/joingame/<%= g.id %>"><%= g.id %></a>
    <% end %>

  <% else %>

    <div id="signin">
      <h2>Sign up:</h2>
      <form method=post action=/signup>
        <input type=text placeholder="Email" name="user[email]"></br>
        <input type=password placeholder="Password" name="user[password]"></br>
        <input type=submit value="Sign up">
      </form></br>
      </br>
    </div>

    <div id ="login">
      <h2>Log in:</h2>
      <form method=post action=/login>
        <input type=text placeholder="Email" name="login[email]"></br>
        <input type=password placeholder="Password" name="login[password]"></br>
        <input type=submit value="Log in">
      </form></br>
      </br>
    </div>

  <% end %>






 </div>
